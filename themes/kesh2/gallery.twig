{% include 'incl/header.twig' %}

<body>
    {% include 'incl/nav.twig' %}

    <div class="main" role="main">
      <h1 class="text-center">{{ meta.title }}</h1>
      <div class="subheading text-center">{{ content }}</div>
        <div class="gallery">
            {% for image in meta.Image %}
              <a href="{{ base_url }}/image/{{ image.title }}.webp" target="_blank"  class="gallery-img">
                  <picture>
                      <source media="(min-width: 668px)" srcset="{{ base_url }}/image/{{ image.title }}.webp">
                      <img src="{{ base_url }}/image/{{ image.title }}.webp&w=667" alt="{{ image.alt }}">
                  </picture>
              </a>
            {% endfor %}
        </div>

        <p class="text-center subheading">En rolig sketch av Freudian Slip Productions</p>
        <div class="embed-container">
          <iframe title="Inbäddad video från YouTube" src="https://www.youtube.com/embed/0wvP5xw3JnE?si=CbYb2ngsml6CAZDw" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>
    
    {% include 'incl/footer.twig' %}

</body>

</html>

